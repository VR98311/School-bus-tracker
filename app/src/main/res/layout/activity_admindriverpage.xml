<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admindriverpage"
    android:background="#E6F45B">

    <EditText
        android:id="@+id/databaseview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:enabled="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/driveraddbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="124dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Add Driver"
        android:textColor="#4A4A1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driveremovebtn" />

    <Button
        android:id="@+id/driveremovebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Remove Driver"
        android:textColor="#4A4A1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/databaseview" />

    <EditText
        android:id="@+id/removeemailet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="Enter Busno "
        android:inputType="number"
        android:textColor="#4A4A1E"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driveraddbtn" />

    <Button
        android:id="@+id/removedonebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="668dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Done"
        android:textColor="#4A4A1E"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/removeemailet"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>