<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driverlogin"
    android:background="#E6F45B">


    <EditText
        android:id="@+id/etemaildriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="#4A4A1E"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/drivertitle"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etpassdriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#4A4A1E"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/etemaildriver"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnlogindriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="148dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Login"
        android:textColor="#4A4A1E"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpassdriver" />

    <TextView
        android:id="@+id/drivertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="80dp"
        android:text="Driver Login"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>