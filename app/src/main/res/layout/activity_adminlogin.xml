<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminlogin"
    android:background="#E6F45B">

    <TextView
        android:id="@+id/titleadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bangers"
        android:text="Admin Login"
        android:textAlignment="center"
        android:textColor="#4A4A1E"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/adminemailet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="#4A4A1E"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/titleadmin"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/adminpasswordet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#4A4A1E"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/adminemailet"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/adminloginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="148dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Login"
        android:textColor="#4A4A1E"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminpasswordet" />

    <Button
        android:id="@+id/admincreateaccbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Create Account"
        android:textColor="#4A4A1E"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminloginbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>